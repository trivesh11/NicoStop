<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>SmokingMobile_app</name>
    <description>
        A blank PhoneGap app.
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        PhoneGap Team
    </author>
    <content src="index.html" />
   <access origin="*" />

    <preference name="permissions" value="none"/>
                                          
   <plugin name="cordova-plugin-call-number" spec="https://github.com/ihadeed/cordova-plugin-call-number" source="git" />

   <plugin name="cordova-plugin-geolocation" spec="2.4.0" />

<allow-navigation href="*" />
    <allow-intent href="http://*/*" launch-external="yes"/>
<allow-intent href="https://*/*" launch-external="yes"/>
   <allow-intent href="geo:*"/>
    <allow-intent href="https://esri.github.io"/>
    <platform name="android">
       <allow-intent href="market:*"/>
   </platform>

</widget>
